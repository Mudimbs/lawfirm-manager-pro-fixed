<%- include("../partials/header") %>
<h1>Tableau de bord financier</h1>

<div class="row">
  <div style="border:1px solid #eee; border-radius:12px; padding:16px;">
    <div style="font-size:14px; opacity:.7;">Facturé (total)</div>
    <div style="font-size:28px; font-weight:800;"><%= totals.total.toFixed(2) %> USD</div>
  </div>
  <div style="border:1px solid #eee; border-radius:12px; padding:16px;">
    <div style="font-size:14px; opacity:.7;">Payé</div>
    <div style="font-size:28px; font-weight:800;"><%= totals.paid.toFixed(2) %> USD</div>
  </div>
</div>
<div class="row">
  <div style="border:1px solid #eee; border-radius:12px; padding:16px;">
    <div style="font-size:14px; opacity:.7;">Non payé</div>
    <div style="font-size:28px; font-weight:800;"><%= totals.unpaid.toFixed(2) %> USD</div>
  </div>
  <div style="border:1px solid #eee; border-radius:12px; padding:16px;">
    <div style="font-size:14px; opacity:.7;">Partiel</div>
    <div style="font-size:28px; font-weight:800;"><%= totals.partial.toFixed(2) %> USD</div>
  </div>
</div>

<h3 style="margin-top:18px;">Évolution mensuelle</h3>
<table>
  <thead><tr><th>Mois</th><th>Facturé</th><th>Payé</th></tr></thead>
  <tbody>
    <% months.forEach(m => { %>
      <tr>
        <td><%= m %></td>
        <td><%= byMonth[m].total.toFixed(2) %> USD</td>
        <td><%= byMonth[m].paid.toFixed(2) %> USD</td>
      </tr>
    <% }) %>
  </tbody>
</table>
<%- include("../partials/footer") %>
