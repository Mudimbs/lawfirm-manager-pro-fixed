<%- include("../partials/header") %>
<h1>Modifier client</h1>
<form action="/clients/<%= client.id %>" method="post">
  <label>Nom complet</label>
  <input name="fullname" value="<%= client.fullname %>" required />
  <div class="row">
    <div>
      <label>Téléphone</label>
      <input name="phone" value="<%= client.phone || '' %>"/>
    </div>
    <div>
      <label>Email</label>
      <input type="email" name="email" value="<%= client.email || '' %>"/>
    </div>
  </div>
  <label>Adresse</label>
  <input name="address" value="<%= client.address || '' %>"/>
  <label>Notes</label>
  <textarea name="notes" rows="4"><%= client.notes || '' %></textarea>
  <button class="btn primary" style="margin-top:12px;">Mettre à jour</button>
</form>
<%- include("../partials/footer") %>
