<%- include("../partials/header") %>
<h1>Modèles de documents</h1>

<h3>Assignation</h3>
<form action="/documents/assignation/pdf" method="post" target="_blank" style="border:1px solid #eee; padding:12px; border-radius:10px;">
  <div class="row">
    <div>
      <label>Dossier</label>
      <select name="case_id" required>
        <% cases.forEach(d => { %>
          <option value="<%= d.id %>"><%= d.title %></option>
        <% }) %>
      </select>
    </div>
    <div>
      <label>Destinataire</label>
      <input name="destinataire" placeholder="Greffier du Tribunal de..."/>
    </div>
  </div>
  <label>Objet</label>
  <input name="objet" placeholder="Assignation à comparaître"/>
  <label>Corps</label>
  <textarea name="corps" rows="5" placeholder="Texte de l'assignation..."></textarea>
  <button class="btn primary" style="margin-top:10px;">Générer PDF</button>
</form>

<h3 style="margin-top:18px;">Reçu</h3>
<form action="/documents/recu/pdf" method="post" target="_blank" style="border:1px solid #eee; padding:12px; border-radius:10px;">
  <div class="row">
    <div>
      <label>Dossier</label>
      <select name="case_id" required>
        <% cases.forEach(d => { %>
          <option value="<%= d.id %>"><%= d.title %></option>
        <% }) %>
      </select>
    </div>
    <div>
      <label>Montant (USD)</label>
      <input type="number" step="0.01" name="montant" required/>
    </div>
  </div>
  <label>Note (facultatif)</label>
  <textarea name="note" rows="3"></textarea>
  <button class="btn primary" style="margin-top:10px;">Générer PDF</button>
</form>

<%- include("../partials/footer") %>
